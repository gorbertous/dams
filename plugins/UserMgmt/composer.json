{
    "name": "your-name-here/user-mgmt",
    "description": "UserMgmt plugin for CakePHP",
    "type": "cakephp-plugin",
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "cakephp/cakephp": "~4.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "UserMgmt\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UserMgmt\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    }
}
